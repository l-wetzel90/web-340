<% include header %>
<% include navbar%>
<div class="container" style="width: 50%;">
  <br>
  <h2>Employee Details</h2>
  <br>

  <div>
    <div class="form-group">
      <label for="txtFirstName">First Name: </label>
      <input type="text" class="form-control col-6" id="txtFirstName" name="txtFirstName"
        value="<%= employee[0].firstName%>" readonly />
