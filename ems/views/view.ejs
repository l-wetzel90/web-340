    <div class="form-group">
      <label for="txtLastName">Last Name: </label>
      <input type="text" class="form-control col-6" id="txtLastName" name="txtLastName"
        value="<%= employee[0].lastName %>" readonly />
    </div>
    <br>
    <a href="/list">Return to list</a>
  </div>

  <% include footer %>
</div>
