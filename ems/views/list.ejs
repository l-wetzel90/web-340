<% include header %>
<% include navbar%>
<div class="container" style="width: 50%;">
  <br>
  <% if(employees.length){ %>

  <h2><%= title %></h2>
  <br>

  <a href="/new">Add New</a>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
        </tr>
      </thead>
      <tbody>
        <!-- for each employee in database -->
        <% employees.forEach(function(entry){ %>
        <tr>
          <td><%= entry.firstName %></td>
          <td><%= entry.lastName %></td>
        </tr>
      </tbody>
      <!-- end for each -->
      <% }) %>
    </table>

    <% } else { %>
    Ain't nothing here yet... <a href="/new">Add Something!!!</a>
    <% } %>
  </div>
  <% include footer %>
</div>
