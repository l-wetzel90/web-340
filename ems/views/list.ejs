<% include header %>
<% include navbar%>
<div class="container" style="width: 50%;">
  <br>

  <h2><%= title %></h2>
  <br>

  <% if(employees.length){ %>

  <p class="text-right"><a href="/new">Add New</a></p>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th class="text-center">View Individual</th>
        </tr>
      </thead>
      <tbody>
        <!-- for each employee in database -->
        <% employees.forEach(function(entry){ %>
        <tr>
          <td><%= entry.firstName %></td>
          <td><%= entry.lastName %></td>
          <td class="text-center">
            <a href="/view/<%= entry.firstName %>" class="btn btn-primary btn-sm">View</a>
          </td>
        </tr>
        <!-- end for each -->
        <% }) %>
      </tbody>
    </table>
  </div>

  <% } else { %>

  Ain't nothing here yet... <a href="/new">Add Something!!!</a>

  <% } %>

  <% include footer %>
</div>
